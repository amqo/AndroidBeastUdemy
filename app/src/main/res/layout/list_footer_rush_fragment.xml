<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <View
        android:id="@+id/footer_rush_fragment_line1"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/footer_rush_fragment_followUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/footer_rush_fragment_line1"
        android:layout_centerHorizontal="true"
        android:text="@string/follow_us"
        android:textColor="@android:color/black" />

    <View
        android:id="@+id/footer_rush_fragment_line2"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:layout_below="@id/footer_rush_fragment_followUs"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/footer_rush_fragment_line2">

        <ImageButton
            android:id="@+id/footer_rush_fragment_facebook"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />

        <ImageButton
            android:id="@+id/footer_rush_fragment_twitter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />

        <ImageButton
            android:id="@+id/footer_rush_fragment_snapchat"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />

        <ImageButton
            android:id="@+id/footer_rush_fragment_instagram"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp" />

    </LinearLayout>

</RelativeLayout>